<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:orientation="vertical">

    <com.example.administrator.expressuserclient.weight.CouponDisplayView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/dialog_round_layout"
        android:foreground="?selectableItemBackground"
        android:orientation="vertical"
        app:CircleColor="#FF7F00"
        android:paddingBottom="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/ty_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_8"
            android:layerType="software"
            android:paddingTop="@dimen/dp_18"
            android:paddingRight="@dimen/dp_8">


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_orderlsit_ordernum"
                android:padding="@dimen/dp_4"
                android:text="快递单号:1564464564654" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="徐易杰"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/dp_5"
                android:text="地址：浙江省嘉兴市浙江省嘉兴市嘉兴学院梁林校区浙江省嘉兴市嘉兴学院梁林校区浙江省嘉兴市嘉兴学院梁林校区嘉兴学院梁林校区" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_8"
                android:drawableLeft="@mipmap/ic_orderitem_tel"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:text="手机号码：1737413173" />
        </LinearLayout>
    </com.example.administrator.expressuserclient.weight.CouponDisplayView>
</LinearLayout>